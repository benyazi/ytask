<!DOCTYPE html>
<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=RobotoDraft:300,400,500,700,400italic">
    <meta charset="UTF-8" />
    <title>YTASK</title>
    {% block stylesheetsHead %}
        {% stylesheets
        'bower_components/bootstrap/dist/css/bootstrap.min.css'
        'bower_components/components-font-awesome/css/font-awesome.min.css'
        'datatables/css/jquery.dataTables.min.css'
        'bower_components/trumbowyg/dist/ui/trumbowyg.min.css'
        'css/base.css'
        filter='cssrewrite' output='compiled/app.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
    {% block javascriptsHead %}
        {% javascripts
        'bower_components/jquery/dist/jquery.min.js'
        output='compiled/app.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body class="layoutMain">
{% trans_default_domain "AppBundle:AppBundle" %}
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ url('_dashboard',{}) }}">YTask</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            {{ knp_menu_render('AppBundle:Builder:mainMenu', { 'style': 'navbar' }) }}
            <ul class="nav navbar-nav navbar-right">
                {{ knp_menu_render('AppBundle:Builder:mainRightMenu', { 'style': 'navbar' }) }}
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
{% block mainContent %}{% endblock %}
{% include 'AppBundle:_template:partials/footer.html.twig' %}
{% block controllerModals %}{% endblock %}
{% block javascriptsFooter %}
    {% javascripts
    'bower_components/bootstrap/dist/js/bootstrap.min.js'
    'datatables/js/jquery.dataTables.min.js'
    'bower_components/trumbowyg/dist/trumbowyg.min.js'
    'js/listController.js'
    output='compiled/appdown.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>
