<div>
    {% for flash_message in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashbag.get('notice') %}
        <div class="alert alert-warning">
            {{ flash_message }}
        </div>
    {% endfor %}
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
            <a href="#projectForm" aria-controls="projectForm" role="tab" data-toggle="tab">
                {% trans %}Edit{% endtrans %}
            </a>
        </li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content issueTabContent">
        <div role="tabpanel" class="tab-pane active" id="projectForm">
            <form id="editProjectForm" onsubmit="return false;">
                {{ form_row(form.name) }}
                {{ form_row(form.title) }}
                {{ form_row(form.description) }}

                <div class="">
                    <button class="btn btn-success" onclick="ProjectController.saveProject();">
                        {% trans %}Save project{% endtrans %}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>