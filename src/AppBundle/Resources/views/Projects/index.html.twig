{% extends 'AppBundle:_template:default.html.twig' %}
{% block body %}
    <div class="row" style="background-color: #00AA88;">
        <div class="col-xs-12 col-sm-4 col-lg-2 col-md-3">

        </div>
        <div class="col-xs-12 col-sm-8 col-lg-10 col-md-9">
            <div>
                <h2>{% trans %}Projects:{% endtrans %}</h2>
                {% for project in projects %}
                <div class="media">
                    <div class="media-left">
                        <i class="fa fa-info"></i>
                    </div>
                    <div class="media-body">
                        <a href="{{ url('_project_work',{"id":project.id}) }}">
                            <h4 class="media-heading">{{ project.title }}</h4>
                        </a>
                        <p></p>
                    </div>
                </div>
                {% else %}
                    {% trans %}Projects list is empty{% endtrans %}
                {% endfor %}
            </div>
            <div>
                <a href="#" class="btn btn-primary">
                    {% trans %}Create new project{% endtrans %}
                </a>
            </div>
        </div>
    </div>
{% endblock %}